@model ProductCatalog.Application.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-4">Product Details</h1>

<div class="card mb-4">
    <div class="card-header">
        <h2>@Model.Name</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ImagePath" class="img-fluid" alt="@Model.Name" />
            </div>
            <div class="col-md-6">
                <p><strong>Category:</strong> @Model.CategoryId</p>
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p><strong>Duration:</strong> @Model.Duration days</p>
                <p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
                <p><strong>Created By:</strong> @Model.CreatedByUserId</p>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
